<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:activatedBackgroundIndicator"
    tools:context=".BookmarksListLayout">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/bookmarks_margin"
        android:columnCount="2"
        android:rowCount="2">
        <ImageView
            android:id="@+id/bookmarks_list_image"
            android:src="@drawable/app_im_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_rowSpan="2"/>
        <TextView
            android:id="@+id/bookmarks_list_project"
            android:text="PROJECT NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"/>

        <TextView
            android:id="@+id/bookmarks_list_project_address"
            android:text="PROJECT ADDRESS HERE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="1"/>

    </GridLayout>

</LinearLayout>