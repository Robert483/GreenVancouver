<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:outlineProvider="bounds"
    tools:context=".fragments.DetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_lvl4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_projectName"
                style="@style/DetailsFragmentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_nameDummy" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/imgv_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/border"
                    android:contentDescription="@string/details_imageDesc"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/placeholder" />

            </FrameLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <!-- Category -->
                <TextView
                    android:id="@+id/tv_categoryLabel"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="start"
                    android:drawableStart="@drawable/detail_category_black_24dp"
                    android:layout_marginBottom="@dimen/margin_lvl3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_projectCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/margin_lvl4"
                    android:layout_marginBottom="@dimen/margin_lvl3"
                    android:layout_row="0"
                    android:layout_column="1" />

                <!-- Type -->
                <TextView
                    android:id="@+id/tv_typeLabel"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:drawableStart="@drawable/detail_type_black_24dp"
                    android:layout_marginBottom="@dimen/margin_lvl3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_projectType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/margin_lvl4"
                    android:layout_marginBottom="@dimen/margin_lvl3"
                    android:layout_row="1"
                    android:layout_column="1" />


                <!-- Address -->
                <TextView
                    android:id="@+id/tv_addressLabel"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:drawableStart="@drawable/detail_location_on_black_24dp"
                    android:layout_marginBottom="@dimen/margin_lvl3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_projectAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/margin_lvl4"
                    android:layout_marginBottom="@dimen/margin_lvl3"
                    android:layout_row="2"
                    android:layout_column="1" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tv_descLabel"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:drawableStart="@drawable/detail_description_black_24dp"
                    android:layout_marginBottom="@dimen/margin_lvl3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_projectDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/margin_lvl4"
                    android:layout_marginBottom="@dimen/margin_lvl3"
                    android:gravity="start"
                    android:layout_row="3"
                    android:layout_column="1" />

                <!-- Website -->
                <TextView
                    android:id="@+id/tv_websiteLabel"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:drawableStart="@drawable/detail_website_black_24dp"
                    android:layout_marginBottom="@dimen/margin_lvl3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_projectWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:layout_marginStart="@dimen/margin_lvl4"
                    android:layout_marginBottom="@dimen/margin_lvl3"
                    android:layout_row="4"
                    android:layout_column="1"/>

            </GridLayout>


        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_lvl1"
            android:layout_marginBottom="@dimen/margin_lvl2"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_lvl4"
                android:contentDescription="@string/details_imageDesc"
                android:src="@drawable/details_share_ic_facebook" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_lvl4"
                android:contentDescription="@string/details_imageDesc"
                android:src="@drawable/details_share_ic_twitter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_lvl4"
                android:contentDescription="@string/details_imageDesc"
                android:src="@drawable/details_share_ic_instagram" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>