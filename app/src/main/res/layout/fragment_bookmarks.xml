<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/BookmarksFragmentTheme">
    <TextView
        android:id="@+id/bookmarks_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bookmarks_title"
        android:textSize="@dimen/bookmarks_title"/>
    <TextView
        android:id="@+id/bookmarks_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bookmarks_warning"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>