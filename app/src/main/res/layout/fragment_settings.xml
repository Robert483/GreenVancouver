<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/switch_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:text="@string/settings_enablelocation"
        android:textSize="30sp" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/switch_location"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:text="@string/settings_appearance"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtv_aboutus"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:text="@string/settings_tos"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtv_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:text="@string/settings_aboutus"
        android:textSize="30sp" />

</RelativeLayout>