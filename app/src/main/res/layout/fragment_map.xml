<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MapFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frag_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_lvl3"
        android:focusable="true"
        android:focusableInTouchMode="true">

<!--        <SearchView-->
<!--            android:id="@+id/simpleSearchView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:layout_marginEnd="3dp"-->
<!--            android:background="@drawable/map_searchbar"-->
<!--            android:iconifiedByDefault="false"-->
<!--            android:imeOptions="actionSearch"-->
<!--            android:queryHint="@string/searchhint"-->
<!--            android:searchIcon="@null" />-->

        <EditText
            android:id="@+id/searchText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="@dimen/margin_lvl4"
            android:paddingEnd="@dimen/margin_lvl4"
            android:hint="@string/searchhint"
            android:drawableStart="@drawable/map_search_dimgray_24dp"
            android:background="@drawable/map_searchbar"
            android:autofillHints="@string/app_name"
            android:maxLines="1"
            android:inputType="text" />


<!--        <Button-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="50dp"-->
