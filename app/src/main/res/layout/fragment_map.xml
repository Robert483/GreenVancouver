<!--            android:textColor="#696969" />-->


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/margin_lvl4"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnChangeMapType"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorBtnWhite"
            android:drawableEnd="@drawable/map_layers_dimgray_50dp"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnZoomIn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorBtnWhite"
            android:text="@string/zoomIn"
            android:textColor="#696969"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnZoomOut"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorBtnWhite"
            android:text="@string/zoomOut"
            android:textColor="#696969"
            android:textSize="24sp" />


    </LinearLayout>


</FrameLayout>