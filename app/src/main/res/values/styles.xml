<resources>

    <style name="ReviewsButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/material_on_background_emphasis_high_type</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <!-- Base application theme. Backup: Theme.AppCompat.Light.DarkActionBar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activatedbackground</item>
        <item name="android:textColor">@color/material_on_background_emphasis_medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SplashActivityTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorTemp</item>
    </style>

    <style name="NavigationViewTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/colorTemp</item>
    </style>

    <style name="VolunteerFragmentTheme">
        <item name="android:padding">@dimen/activity_margin</item>
        <item name="android:textSize">@dimen/volunteer_label_textsize</item>
    </style>

    <style name="LoginActivityTheme">
        <item name="android:background">@color/colorTemp</item>
    </style>

    <style name="BookmarksFragmentTheme">
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activatedbackground</item>
    </style>
    <style name="SettingTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingTextStyle.AuxiliaryText" parent="SettingTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#657777</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DetailsFragmentTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DetailsTableStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
