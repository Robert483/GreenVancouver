<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SplashActivityTheme" parent="AppTheme.NoActionBar">
        <item name="android:background">@color/colorTemp</item>
    </style>

    <style name="NavigationViewTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/colorTemp</item>
    </style>

    <style name="VolunteerFragmentTheme">
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:textSize">@dimen/volunteer_label_textsize</item>
    </style>

    <style name="LoginActivityTheme">
        <item name="android:background">@color/colorTemp</item>
    </style>

</resources>
